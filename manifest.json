{
  "manifest_version": 2,
  "name": "GitFit",
  "version": "1.0",

  "description": "Stego the Tabagotchi",

  "background": {
    "scripts": ["build/stego.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "<all_urls>"
  ],

  "chrome_url_overrides": {
    "newtab": "client/main/stego.html"
  },

  "icons": {
    "16": "client/images/stego16.png",
    "48": "client/images/stego48.png",
    "128": "client/images/stego128.png"
  }
}

